{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es2017",
      "es6",
      "es7",
      "ES2019"
    ],
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "jsx": "preserve",

    "allowSyntheticDefaultImports": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true,
  },
  "types": [
    "chrome"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "app/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "payments",
    "electron"
  ]
}
